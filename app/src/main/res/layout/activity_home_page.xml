<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_wave__1_"
    tools:context=".navigationdrawer.home.HomePageActivity">
    <FrameLayout
        android:id="@+id/flHomePage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/hp_bottom_margin">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin">

            <TextView
                android:id="@+id/tvLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv_layout_margin_top"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/hp_font"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvEscapeThreat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/hp_margin_top"
                app:cardCornerRadius="@dimen/hp_corner_radius"
                android:padding="@dimen/hp_padding_margin"
                app:cardUseCompatPadding="true"
                android:elevation="@dimen/card_elevation"
                app:layout_constraintTop_toBottomOf="@+id/tvLabel"
                app:layout_constraintLeft_toLeftOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivEscapeThreat"
                        android:layout_width="@dimen/hp_iv_width_height"
                        android:layout_height="@dimen/hp_iv_width_height"
                        android:layout_margin="@dimen/hp_padding_margin"
                        app:srcCompat="@drawable/ic_directions_run"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/labelEscapeThreat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/hp_margin_start"
                        android:padding="@dimen/hp_padding_margin"
                        android:text="@string/tips"
                        android:textAlignment="center"
                        android:textSize="@dimen/hp_tv_font"
                        app:layout_constraintLeft_toRightOf="@+id/ivEscapeThreat"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTipsForWomenSafety"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/hp_margin_top"
                app:cardCornerRadius="@dimen/hp_corner_radius"
                app:cardUseCompatPadding="true"
                android:elevation="@dimen/card_elevation"
                app:layout_constraintTop_toBottomOf="@+id/cvEscapeThreat"
                app:layout_constraintRight_toRightOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivTipsForWomenSafety"
                        android:layout_width="@dimen/hp_iv_width_height"
                        android:layout_height="@dimen/hp_iv_width_height"
                        android:layout_margin="@dimen/hp_padding_margin"
                        app:srcCompat="@drawable/ic_health_and_safety"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <TextView
                        android:id="@+id/labelTipsForWomenSafety"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/hp_padding_margin"
                        android:layout_marginStart="@dimen/hp_margin_start"
                        android:textAlignment="center"
                        app:layout_constraintLeft_toRightOf="@+id/ivTipsForWomenSafety"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/tips2"
                        android:textSize="@dimen/hp_tv_font" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvVideosForSelfDefense"
                app:cardCornerRadius="@dimen/hp_corner_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/hp_margin_top"
                app:cardUseCompatPadding="true"
                android:elevation="@dimen/card_elevation"
                app:layout_constraintTop_toBottomOf="@+id/cvTipsForWomenSafety"
                app:layout_constraintLeft_toLeftOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivVideosForSelfDefense"
                        android:layout_width="@dimen/hp_iv_width_height"
                        android:layout_height="@dimen/hp_iv_width_height"
                        android:layout_margin="@dimen/hp_padding_margin"
                        app:srcCompat="@drawable/ic_self_defense"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/labelVideosSelfDefense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/hp_padding_margin"
                        android:layout_marginStart="@dimen/hp_margin_start"
                        android:text="@string/videos"
                        android:textAlignment="center"
                        app:layout_constraintLeft_toRightOf="@+id/ivVideosForSelfDefense"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textSize="@dimen/hp_tv_font" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvLaws"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/hp_margin_top"
                app:cardCornerRadius="@dimen/hp_corner_radius"
                app:cardUseCompatPadding="true"
                android:elevation="@dimen/card_elevation"
                app:layout_constraintTop_toBottomOf="@+id/cvVideosForSelfDefense"
                app:layout_constraintRight_toRightOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivLaws"
                        android:layout_width="@dimen/hp_iv_width_height"
                        android:layout_height="@dimen/hp_iv_width_height"
                        android:layout_margin="@dimen/hp_padding_margin"
                        app:srcCompat="@drawable/ic_balance"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/labelLaws"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/hp_padding_margin"
                        android:layout_marginStart="@dimen/hp_margin_start"
                        android:textAlignment="center"
                        android:text="@string/laws"
                        android:textSize="@dimen/hp_tv_font"
                        app:layout_constraintLeft_toRightOf="@+id/ivLaws"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>



    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabCradleMargin="@dimen/hp_padding_margin"
        app:fabCradleVerticalOffset="20dp"
        app:fabCradleRoundedCornerRadius="@dimen/fab_corner_radius">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:menu="@menu/bottom_nav_menu"/>
    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_fab"
        android:layout_width="@dimen/fab_width_height"
        android:layout_height="@dimen/fab_width_height"
        android:backgroundTint="@color/rogue_pink"
        android:elevation="10dp"
        android:src="@drawable/ic_sos"
        app:tint="@color/white"
        android:scaleType="center"
        app:layout_anchor="@id/bottomAppBar" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>