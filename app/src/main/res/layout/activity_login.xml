<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_app_background"
    android:padding="@dimen/parent_padding"
    tools:context=".authentication.LoginActivity">

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tv_layout_margin_top"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:paddingTop="@dimen/et_padding"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/app_name_font"
        app:layout_constraintBaseline_toBaselineOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:elevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toTopOf="@id/btnLogin"
        app:layout_constraintTop_toBottomOf="@id/tvAppName">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height"
            android:background="@drawable/card_shape"
            android:orientation="vertical"
            android:padding="@dimen/parent_padding"
            android:paddingTop="@dimen/parent_padding"
            android:paddingBottom="@dimen/parent_padding"
            app:layout_constraintBottom_toTopOf="@id/btnLogin"
            app:layout_constraintTop_toBottomOf="@id/tvAppName">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/hp_margin_top"
                app:endIconMode="clear_text"
                app:layout_constraintBottom_toTopOf="@+id/textField"
                app:layout_constraintTop_toBottomOf="@+id/tvAppName">

                <EditText
                    android:id="@+id/loginEmailId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="abc@gmail.com"
                    android:background="@color/white"
                    android:hint="@string/enter_email_id"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv_layout_margin_top"
                app:endIconMode="password_toggle"
                app:layout_constraintBottom_toTopOf="@+id/btnLogin"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout1">

                <EditText
                    android:id="@+id/loginPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="abc@gmail.com"
                    android:background="@color/white"
                    android:hint="@string/enter_password"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/btnForgotPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/forgot_password"
                android:layout_marginTop="@dimen/hp_margin_top"
                android:text="@string/forgot_password"
                android:textSize="@dimen/tv_font_size" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:text="@string/login"
        app:layout_constraintBottom_toTopOf="@+id/registerHere"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/registerHere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:gravity="center"
        android:text="@string/register_here"
        android:textSize="@dimen/tv_font_size"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />
</androidx.constraintlayout.widget.ConstraintLayout>