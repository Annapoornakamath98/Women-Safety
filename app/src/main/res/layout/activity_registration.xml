<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_wave__1_"
    android:padding="@dimen/parent_padding"
    tools:context=".authentication.RegistrationActivity">

    <TextView
        android:id="@+id/tvRegAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tv_layout_margin_top"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/app_name_font"
        app:layout_constraintBaseline_toBaselineOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/regInputLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_top"
        app:endIconMode="clear_text"
        android:padding="@dimen/default_padding"
        app:layout_constraintTop_toBottomOf="@+id/tvRegAppName">

        <EditText
            android:id="@+id/registerFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="abc"
            android:background="@color/white"
            android:hint="@string/enter_your_name"
            android:inputType="text"
            android:padding="@dimen/et_padding" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/regInputLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tv_layout_margin_top"
        app:endIconMode="clear_text"
        app:layout_constraintBottom_toTopOf="@id/regInputLayout3"
        app:layout_constraintTop_toBottomOf="@id/regInputLayout1"
        android:padding="@dimen/default_padding">

        <EditText
            android:id="@+id/registerPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="1234567891"
            android:background="@color/white"
            android:hint="@string/enter_your_phone_number"
            android:inputType="phone"
            android:maxLength="10"
            android:padding="@dimen/et_padding" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/regInputLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tv_layout_margin_top"
        app:endIconMode="clear_text"
        app:layout_constraintBottom_toTopOf="@id/regInputLayout4"
        app:layout_constraintTop_toBottomOf="@id/regInputLayout2"
        android:padding="@dimen/default_padding">

        <EditText
            android:id="@+id/registerEmailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:autofillHints="abc@gmail.com"
            android:hint="@string/enter_email_id"
            android:inputType="textEmailAddress"
            android:padding="@dimen/et_padding" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/regInputLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tv_layout_margin_top"
        app:endIconMode="password_toggle"
        app:layout_constraintBottom_toTopOf="@id/btnRegister"
        app:layout_constraintTop_toBottomOf="@id/regInputLayout3"
        android:padding="@dimen/default_padding">

        <EditText
            android:id="@+id/registerPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="abc@gmail.com"
            android:hint="@string/set_password"
            android:background="@color/white"
            android:inputType="textPassword"
            android:padding="@dimen/et_padding" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:background="@drawable/button_shape"
        android:text="@string/register"
        app:layout_constraintBottom_toTopOf="@+id/goToLogin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regInputLayout4" />

    <TextView
        android:id="@+id/goToLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tv_layout_margin_top"
        android:gravity="center"
        android:text="@string/go_to_login"
        android:textSize="@dimen/tv_font_size"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister" />

</androidx.constraintlayout.widget.ConstraintLayout>