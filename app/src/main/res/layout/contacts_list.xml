<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/parent_padding">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <TextView
            android:id="@+id/contactsListName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/parent_padding"
            android:textColor="@color/black"
            android:padding="@dimen/et_padding"
            android:textSize="@dimen/tv_font_size" />

        <TextView
            android:id="@+id/contactsListNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_layout_margin_top"
            android:padding="@dimen/et_padding"
            android:textSize="@dimen/tv_font_size" />

    </androidx.cardview.widget.CardView>


</LinearLayout>